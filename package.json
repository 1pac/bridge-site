{
  "type": "module",
  "scripts": {
    "sass-watch":  "sass --watch src/scss/main.scss:asset/css/main.bundle.css src/scss/common.scss:asset/css/common.css",
    "sass": "sass src/scss/main.scss asset/css/main.bundle.css --style=compressed && sass src/scss/common.scss asset/css/common.css --style=compressed",
    "build": "npm run ejs && npm run sass && npm run beautify",
    "ejs": "node build-ejs.js",
    "ejs-watch": "node build-watach-ejs.js --watch",
    "beautify": "js-beautify -r dist/**/*.html --indent-size 2 --max-preserve-newlines 1"
  },
  "dependencies": {
    "ejs": "^3.1.10",
    "js-beautify": "^1.15.4",
    "sass": "^1.94.0"
  },
  "devDependencies": {
    "chokidar": "^4.0.3",
    "ejs-cli": "^2.2.3"
  }
}
